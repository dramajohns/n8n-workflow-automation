# n8n Self-Hosted Configuration
# Copy this file to .env and fill in your actual values

# Required: n8n API Configuration
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your_api_key_here

# Optional: Database Configuration (for production use)
# Default is SQLite, use PostgreSQL for production
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n_user
# DB_POSTGRESDB_PASSWORD=your_password

# Optional: Queue Mode (for production scaling)
# Requires Redis for distributed job queue
# QUEUE_BULL_REDIS_HOST=localhost
# QUEUE_BULL_REDIS_PORT=6379
# QUEUE_BULL_REDIS_PASSWORD=

# Optional: Webhook Configuration
# WEBHOOK_URL=https://your-domain.com
# N8N_HOST=0.0.0.0
# N8N_PORT=5678
# N8N_PROTOCOL=https

# Optional: Execution Data Pruning
# Automatically delete old execution data
# EXECUTIONS_DATA_PRUNE=true
# EXECUTIONS_DATA_MAX_AGE=168  # Hours (168 = 1 week)

# Optional: Metrics and Monitoring
# Enable Prometheus metrics endpoint
# N8N_METRICS=true
# N8N_METRICS_PORT=8081

# Optional: Security
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your_secure_password

# Optional: Timezone
# GENERIC_TIMEZONE=Europe/Berlin
# TZ=Europe/Berlin

# Optional: Log Level
# N8N_LOG_LEVEL=info  # Options: error, warn, info, verbose, debug
